@model IEnumerable<SwiftSearch.Data.Furniture>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FurnitureName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FurnitureModel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FurnitureColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FurniturePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FurnitureDealer)
        </th>
