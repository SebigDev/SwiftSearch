            @Html.DisplayFor(modelItem => item.FurnitureModel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FurnitureColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FurniturePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FurnitureDealer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FurnitureAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FurnitureImage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
